<Page x:Class="PraktikaTuz3_01.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaTuz3_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="AdminPage">

    <Grid>
        <StackPanel Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="Hellotext" Width="200" Height="35" Margin="10"></TextBlock>
            <StackPanel Margin="0 10 0 10">
                <Button Name="AccountButn" Click="AccountButn_Click" Content="Все учетные записи" Width="160" Height="30" Margin="5"></Button>
                <Button Name="AddButn" Click="AddButn_Click" Content="Добавить пользователя" Width="160" Height="30" Margin="5"></Button>
            </StackPanel>
            <Button Name="ExitBtn" Content="Выйти" Width="100" Height="25" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
