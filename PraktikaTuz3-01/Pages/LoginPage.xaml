<Page x:Class="PraktikaTuz3_01.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaTuz3_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Вход в систему" FontSize="25" HorizontalAlignment="Center"></Label>
            <WrapPanel>
                <Label Width="100" Content="Логин" FontSize="15" Margin="10"></Label>
                <TextBox Name="Logintext" Width="120" Height="30" Margin="10"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label  Width="100" Content="Пароль" FontSize="15"  Margin="10"></Label>
                <TextBox Name="Paswtext" Width="120" Height="30" Margin="10"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Button Name="EnterBtn" Click="EnterBtn_Click" Width="120" Height="25" Margin="10" Content="Войти"></Button>
                <Button Name="ExitBtn" Click="ExitBtn_Click" Width="120" Height="25" Margin="10" Content="Закончить работу"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
