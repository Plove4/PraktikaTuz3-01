<Page x:Class="PraktikaTuz3_01.Pages.ManegerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PraktikaTuz3_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="ManegerPage">

    <Grid>
        <StackPanel Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="Hellotext" Width="300" Height="35" Margin="10"></TextBlock>
            <WrapPanel Margin="0 10 0 10">
                <Button Name="ReportBtn1" Content="Отчет 1" Width="100" Height="60" Margin="30 10 70 10"></Button>
                <Button Name="ReportBtn2" Content="Отчет 2" Width="100" Height="60" Margin="70 10 10 10"></Button>
            </WrapPanel>
            <Button Name="ExitBtn" Content="Выйти" Width="100" Height="25" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
